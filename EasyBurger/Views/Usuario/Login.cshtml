
@{
    ViewBag.Title = "Login";
}

<!-- login -->
<div class="login-contect py-5">
    <div class="container py-xl-5 py-3">
        <div class="login-body">
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger" role="alert">
                    <strong>@ViewBag.Error</strong>
                </div>
            }
            @if (ViewBag.Mensaje != null)
            {
                <div class="alert alert-warning" role="alert">
                    <strong>@ViewBag.Mensaje</strong>
                </div>
            }
            <div class="login p-4 mx-auto">
                <h5 class="text-center mb-4">Ingrese Ahora</h5>
                <form action="/Usuario/Login" method="post">
                    <div class="form-group">
                        <label>Nombre de Usuario</label>
                        <input type="text" class="form-control" name="Nombre" placeholder="" required="">
                    </div>
                    <div class="form-group">
                        <label class="mb-2">Contraseña</label>
                        <input type="password" class="form-control" name="Contrasenia" placeholder="" required="">
                    </div>
                    <button type="submit" class="btn submit mb-4">Ingresar</button>
                    <p class="account-w3ls text-center text-da">
                        No Posee Una Cuenta?
                        <a href="/Usuario/Create">Registrese Ahora</a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- //login -->
