@model EasyBurger.Models.Usuario

@{
    ViewBag.Title = "Details";
}

<!-- single page -->
<div class="single-page py-5">
    <div class="container py-xl-5 py-lg-3">
        <div class="title-section text-center mb-md-5 mb-4">
            <p class="w3ls-title-sub">Detalles</p>
            <h3 class="w3ls-title">Perfil</h3>
        </div>
        <div class="inner-sec">
            <div class="row">
                <!-- left side -->
                <div class="col-lg-8 left-blog-info text-left">
                    <div class="blog-grid-top">
                        <div class="b-grid-top">
                            <div class="blog_info_left_grid">
                                <a href="single.html">
                                    <img src="~/Content/images/single1.jpg" class="img-fluid" alt="">
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- //left side -->
                <div class="col-lg-4 left-blog-info text-right">
                    <p class="text-blog-single">
                        NOMBRE: @Model.Nombre
                    </p>
                    <p class="text-blog-single">
                        APELLIDO: @Model.Apellido
                    </p>
                    <p class="text-blog-single">
                        EMAIL: @Model.Email
                    </p>

                    <p class="text-blog-single">
                        @if (Model.Sexo.Equals("M"))
                        {
                            <span>SEXO: MASCULINO</span>
                        }
                        else
                        {
                            <span>SEXO: FEMENINO</span>
                        }
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- //single -->