@model EasyBurger.Models.Usuario

@{
    ViewBag.Title = "Perfil";
}

<!-- single page -->
<div class="single-page py-5">
    <div class="container py-xl-5 py-lg-3">
        <div class="title-section text-center mb-md-5 mb-4">
            <h3 class="w3ls-title">Perfil de @Model.Nombre @Model.Apellido</h3>
        </div>
        <div class="inner-sec">
            <div class="row">
                <!-- left side -->
                <div class="col-lg-8 left-blog-info text-left">
                    <div class="blog-grid-top">
                        <div class="b-grid-top">
                            <div class="blog_info_left_grid">
                                <a href="single.html">
                                    <img src="~/Content/images/single1.jpg" class="img-fluid" alt="">
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="comment-top mt-3">
                        <h4>Deja un Comentario</h4>
                        <div class="comment-bottom">
                            <form action="#" method="post">
                                <div class="form-group">
                                    <input class="form-control" type="text" name="Name" placeholder="Name" required="">
                                </div>
                                <div class="form-group">
                                    <input class="form-control" type="email" name="Email" placeholder="Email"
                                           required="">
                                </div>
                                <div class="form-group">
                                    <input class="form-control" type="text" name="Subject" placeholder="Subject"
                                           required="">
                                </div>
                                <div class="form-group">
                                    <textarea class="form-control" name="Message" placeholder="Message..."
                                              required=""></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary submit">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- //left side -->
                <!-- right side -->
                <aside class="col-lg-4 right-blog-con text-right mt-lg-0 mt-5">
                    <div class="right-blog-info text-left">
                        <div class="tech-btm">
                            <img src="~/Content/images/blog1.jpg" class="img-thumbnail rounded-circle" alt="img">
                            <h4 class="text-capitalize text-md-center">
                                NOMBRE: @Model.Nombre
                            </h4>
                            <h4 class="text-capitalize text-md-center">
                                APELLIDO: @Model.Apellido
                            </h4>
                            <h4 class="text-capitalize text-md-center">
                                EMAIL: @Model.Email
                            </h4>

                            <h4 class="text-capitalize text-md-center">
                                @if (Model.Sexo.Equals("M"))
                                {
                                    <span>SEXO: MASCULINO</span>
                                }
                                else
                                {
                                    <span>SEXO: FEMENINO</span>
                                }
                            </h4>
                        </div>
                    </div>
                </aside>
                <!-- //right side -->
            </div>
            <h4 class="text-center mt-3">Mis Pedidos</h4>
            <div class="row mt-5">
                @if (ViewBag.Pedidos != null)
                {
                    foreach (var p in ViewBag.Pedidos)
                    {
                        <div class="col-md-3 single-gd tech-btm">
                            <!-- TODO: LISTAR PEDIDOS DEL USUARIO -->
                            <div class="card">
                                <div class="card-img">
                                    <img src="~/Content/images/@p.Hamburguesa.Imagen" alt="No Disponible" class="img-thumbnail rounded-0" />
                                </div>
                                <div class="card-body">
                                    <h4 class="card-title">@p.Hamburguesa.Nombre</h4>
                                    <h5 class="card-text">$@p.Total</h5>
                                </div>
                            </div>
                        </div>
                    }
                }

            </div>
        </div>
    </div>
</div>
<!-- //single -->